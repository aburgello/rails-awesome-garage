<div class="container mx-auto p-4">
  <h1 class="text-4xl font-bold mb-4">Cars List</h1>
  <p class="text-gray-600 mb-6">Explore our collection of cars.</p>
  
  <ul class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-4">
    <% @cars.each do |car| %>
      <li class="bg-white shadow rounded-lg p-4">
        <% if car.image_url.present? %>
          <img src="<%= car.image_url %>" alt="<%= car.brand %> <%= car.model %>" class="w-full h-40 object-cover rounded-t-lg mb-2">
        <% else %>
          <img src="https://via.placeholder.com/300x200" alt="No image available" class="w-full h-40 object-cover rounded-t-lg mb-2">
        <% end %>
        
        <h2 class="text-xl font-semibold"><%= car.brand %> <%= car.model %></h2>
        <p class="text-gray-500">Year: <%= car.year %></p>
        <p class="text-gray-500">Fuel: <%= car.fuel %></p>
        <%= link_to 'View Details', car_path(car), class: 'text-blue-500 hover:underline' %>
      </li>
    <% end %>
  </ul>
</div>