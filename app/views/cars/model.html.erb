<h1 class="text-2xl font-bold mb-4">Models for <%= @models.first['Make_Name'] %></h1>

<div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-4">
  <% @models.each do |model| %>
    <div class="border p-4 rounded-lg shadow-md hover:shadow-lg transition">
      <h2 class="text-xl font-semibold"><%= model['Model_Name'] %></h2>
      <p>Year: <%= model['Model_Year'] %></p>
      <%= link_to 'View Details', car_path(model['Model_ID']), class: 'text-blue-500 hover:underline' %>
    </div>
  <% end %>
</div>

<%= link_to 'Back to Makes', cars_path, class: 'mt-4 inline-block text-blue-500 hover:underline' %>
